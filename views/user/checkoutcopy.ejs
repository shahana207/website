    <!-- JavaScript -->
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Address Validation Function (Aligned with Backend)
            function validateAddress(formType) {
                const prefix = formType === 'new' ? 'new' : 'edit';
                const address = {
                    addressType: $(`#address-type-${prefix}`).val(),
                    name: $(`#name-${prefix}`).val().trim(),
                    addressLine: $(`#address-line-${prefix}`).val().trim(),
                    landmark: $(`#landmark-${prefix}`).val().trim(),
                    city: $(`#city-${prefix}`).val().trim(),
                    state: $(`#state-${prefix}`).val().trim(),
                    pincode: $(`#pincode-${prefix}`).val().trim(),
                    phone: $(`#phone-${prefix}`).val().trim(),
                    altPhone: $(`#alt-phone-${prefix}`).val().trim(),
                    isDefault: $(`#default-address-${prefix}`).is(':checked')
                };

                let errors = {};

                // Validate addressType
                if (!address.addressType) {
                    errors.addressType = 'Address type is required';
                } else if (!['Home', 'Work', 'Other'].includes(address.addressType)) {
                    errors.addressType = 'Invalid address type';
                }

                // Validate name
                if (!address.name) {
                    errors.name = 'Full name is required';
                } else if (address.name.length < 2 || address.name.length > 50) {
                    errors.name = 'Full name must be 2-50 characters';
                } else if (!/^(?!.*\s{3,})[a-zA-Z](?:[a-zA-Z\s.]*[a-zA-Z])?$/.test(address.name)) {
                    errors.name = 'Full name can only contain letters, spaces, and periods, and cannot have excessive spaces';
                }

                // Validate addressLine
                if (!address.addressLine) {
                    errors.addressLine = 'Address line is required';
                } else if (address.addressLine.length < 5 || address.addressLine.length > 100) {
                    errors.addressLine = 'Address line must be 5-100 characters';
                } else if (!/^(?=.*[a-zA-Z0-9])(?!.*\s{3,})[a-zA-Z0-9][-.,#\/a-zA-Z0-9\s]*[a-zA-Z0-9]$/.test(address.addressLine)) {
                    errors.addressLine = 'Address line must contain letters or numbers without excessive spaces and can only include common symbols (-.,#/)';
                }

                // Validate city
                if (!address.city) {
                    errors.city = 'City is required';
                } else if (address.city.length < 3 || address.city.length > 50) {
                    errors.city = 'City must be 3-50 characters';
                } else if (!/^(?=.*[a-zA-Z])(?!.*\s{3,})[a-zA-Z][-a-zA-Z\s]*[a-zA-Z]$/.test(address.city)) {
                    errors.city = 'City must contain letters without excessive spaces and can only include spaces and hyphens (e.g., New Delhi)';
                }

                // Validate landmark
                if (!address.landmark) {
                    errors.landmark = 'Landmark is required';
                } else if (address.landmark.length < 3 || address.landmark.length > 50) {
                    errors.landmark = 'Landmark must be 3-50 characters';
                } else if (!/^(?=.*[a-zA-Z0-9])(?!.*\s{3,})[a-zA-Z0-9][-.,&()a-zA-Z0-9\s]*[a-zA-Z0-9]$/.test(address.landmark)) {
                    errors.landmark = 'Landmark must contain letters or numbers without excessive spaces and can only include common symbols (-.,&())';
                }

                // Validate state
                if (!address.state) {
                    errors.state = 'State is required';
                }

                // Validate pincode
                if (!address.pincode) {
                    errors.pincode = 'PIN code is required';
                } else if (address.pincode.length !== 6) {
                    errors.pincode = 'PIN code must be exactly 6 digits';
                } else if (!/^\d+$/.test(address.pincode)) {
                    errors.pincode = 'PIN code must contain only digits';
                }

                // Validate phone
                if (!address.phone) {
                    errors.phone = 'Phone number is required';
                } else if (address.phone.length !== 10) {
                    errors.phone = 'Phone number must be exactly 10 digits';
                } else if (!/^[6-9][0-9]{9}$/.test(address.phone)) {
                    errors.phone = 'Phone number must be a valid mobile number (starting with 6, 7, 8, or 9)';
                }

                // Validate altPhone
                if (address.altPhone) {
                    if (address.altPhone.length !== 10) {
                        errors.altPhone = 'Alternate phone number must be exactly 10 digits';
                    } else if (!/^[6-9][0-9]{9}$/.test(address.altPhone)) {
                        errors.altPhone = 'Alternate phone number must be a valid Indian mobile number (starting with 6, 7, 8, or 9)';
                    }
                }

                // Validate isDefault (ensure it's a boolean)
                if (typeof address.isDefault !== 'boolean') {
                    errors.isDefault = 'isDefault must be a boolean';
                }

                if (Object.keys(errors).length > 0) {
                    const firstError = Object.values(errors)[0];
                    alert(firstError); // Using alert instead of SweetAlert
                    return false;
                }

                return true;
            }

            // Handle Payment Method Selection
            $('.zz-payment-method').on('click', function() {
                $('.zz-payment-method').removeClass('active');
                $(this).addClass('active');
                $(this).find('input').prop('checked', true);

                $('#card-payment-details').hide();
                $('#upi-payment-details').hide();

                const paymentMethod = $(this).find('input').val();
                if (paymentMethod === 'card') {
                    $('#card-payment-details').show();
                } else if (paymentMethod === 'upi') {
                    $('#upi-payment-details').show();
                }
            });

            // Handle Saved Address Checkbox Selection
            $('.address-checkbox').on('change', function() {
                $('.address-checkbox').not(this).prop('checked', false);
                $('.address-item').removeClass('active');
                if ($(this).is(':checked')) {
                    $(this).closest('.address-item').addClass('active');
                }
            });

            // Show New Address Form and Deselect Saved Addresses
            $('#add-new-address').on('click', function(e) {
                e.preventDefault();
                $('.address-checkbox').prop('checked', false);
                $('.address-item').removeClass('active');
                $('#new-address-form').show();
                $('#edit-address-form').hide();
                $('#new-address-form').find('input').val('');
                $('#address-type-new').val('');
            });

            // Cancel New Address Form
            $('#cancel-new-address').on('click', function() {
                $('#new-address-form').hide();
                $('#new-address-form').find('input').val('');
                $('#address-type-new').val('');
                // Revert to default address if exists
                const defaultAddress = $('.address-item').filter(function() {
                    return $(this).data('address-id') === $('.address-item.active').data('address-id');
                });
                if (defaultAddress.length) {
                    defaultAddress.find('.address-checkbox').prop('checked', true);
                    defaultAddress.addClass('active');
                }
            });

            // Validate and Submit New Address Form
            $('#new-address-form-submit').on('submit', function(e) {
                if (!validateAddress('new')) {
                    e.preventDefault();
                }
            });

            // Edit Address - Populate Form
            $('.edit-address-btn').on('click', function(e) {
                e.preventDefault();
                const addressId = $(this).data('address-id');
                const addressItem = $(this).closest('.address-item');
                
                $('#new-address-form').hide();
                $('#edit-address-form').show();

                // Populate form with existing address data
                const addressType = addressItem.find('.address-name').text().match(/\((.*?)\)/)?.[1] || '';
                $('#address-type-edit').val(addressType);
                $('#name-edit').val(addressItem.find('.address-name').text().replace(/\(.+\)/, '').replace('• ', '').trim());
                const addressText = addressItem.find('.address-text').text().split(',');
                $('#address-line-edit').val(addressText[0].trim());
                $('#landmark-edit').val(addressText[1].trim());
                $('#city-edit').val(addressText[2].trim());
                $('#state-edit').val(addressText[3].split('-')[0].trim());
                $('#pincode-edit').val(addressText[3].split('-')[1].trim());
                $('#phone-edit').val(addressItem.find('.address-phone').text().split('Phone: ')[1].split('Alternate: ')[0].trim());
                $('#alt-phone-edit').val(addressItem.find('.address-phone').text().split('Alternate: ')[1]?.trim() === 'N/A' ? '' : addressItem.find('.address-phone').text().split('Alternate: ')[1]?.trim());
                $('#default-address-edit').prop('checked', addressItem.hasClass('active'));

                // Set address ID for submission
                $('#edit-address-id').val(addressId);
            });

            // Cancel Edit Address Form
            $('#cancel-edit-address').on('click', function() {
                $('#edit-address-form').hide();
                $('#edit-address-form').find('input').val('');
                $('#address-type-edit').val('');
                // Revert to default address if exists
                const defaultAddress = $('.address-item').filter(function() {
                    return $(this).data('address-id') === $('.address-item.active').data('address-id');
                });
                if (defaultAddress.length) {
                    defaultAddress.find('.address-checkbox').prop('checked', true);
                    defaultAddress.addClass('active');
                }
            });

            // Validate and Submit Edit Address Form
            $('#edit-address-form-submit').on('submit', function(e) {
                if (!validateAddress('edit')) {
                    e.preventDefault();
                }
            });

            // Validate Checkout Form on Submission
            $('#checkout-form').on('submit', function(e) {
                const selectedAddress = $('input[name="selectedAddress"]:checked').val();
                if (!selectedAddress && !$('#new-address-form').is(':visible')) {
                    e.preventDefault();
                    alert('Please select an address or add a new one.');
                }
            });
        });

        
    </script>
