<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Inter", sans-serif;
        }

        body {
            background-color: #f4f7fc;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .login-container {
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            transition: transform 0.3s ease;
        }

        .login-container:hover {
            transform: translateY(-5px);
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-header h1 {
            font-size: 28px;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 8px;
        }

        .login-header p {
            font-size: 16px;
            color: #6b7280;
        }

        .login-form .form-group {
            margin-bottom: 20px;
        }

        .login-form label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            color: #374151;
            margin-bottom: 8px;
        }

        .login-form input[type="text"],
        .login-form input[type="password"] {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 16px;
            background-color: #f9fafb;
            transition: all 0.3s ease;
        }

        .login-form input:focus {
            outline: none;
            border-color: #5b86e5;
            box-shadow: 0 0 0 3px rgba(91, 134, 229, 0.2);
        }

        .password-container {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6b7280;
            font-size: 18px;
        }

        .toggle-password:hover {
            color: #5b86e5;
        }

        .login-form input[type="checkbox"] {
            width: auto;
            margin-right: 8px;
        }

        .login-form .checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .login-form button {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #000000 0%, #5f6060 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .login-form button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(91, 134, 229, 0.4);
        }

        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 12px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 500;
            color: #374151;
            background-color: #ffffff;
            cursor: pointer;
            text-decoration: none;
            margin-top: 20px;
            transition: all 0.3s ease;
        }

        .google-btn:hover {
            background-color: #f9fafb;
            border-color: #5b86e5;
        }

        .google-icon {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }

        .login-footer {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #6b7280;
        }

        .login-footer a {
            color: #5b86e5;
            text-decoration: none;
            font-weight: 500;
        }

        .login-footer a:hover {
            text-decoration: underline;
        }

        .error-message {
            color: #ef4444;
            font-size: 12px;
            margin-top: 5px;
            background-color: #fef2f2;
            padding: 8px;
            border-radius: 4px;
            display: none;
        }

        .server-error {
            color: #ef4444;
            font-size: 14px;
            text-align: center;
            background-color: #fef2f2;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        @media (max-width: 480px) {
            .login-container {
                padding: 20px;
            }

            .login-header h1 {
                font-size: 24px;
            }

            .login-form button {
                padding: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h1>Welcome Back</h1>
            <p>Sign in to continue your journey</p>
        </div>

        <% if (locals.errorMessage) { %>
            <div class="server-error">
                <%= errorMessage %>
            </div>
        <% } %>

        <form class="login-form" onsubmit="return validateForm()" action="/login" method="POST">
            <div class="form-group">
                <label for="username">Email Address</label>
                <input
                    type="text"
                    id="username"
                    name="username"
                    placeholder="Enter your email"
                >
                <div id="nameerror" class="error-message"></div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <div class="password-container">
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Enter your password"
                    >
                    <span
                        class="toggle-password"
                        onclick="togglePasswordVisibility('password')"
                    >üëÅÔ∏è</span>
                    <div id="passworderror" class="error-message"></div>
                </div>
            </div>

            <div class="checkbox-group">
                <input type="checkbox" id="remember" name="remember">
                <label for="remember">Remember me</label>
            </div>

            <button type="submit">Sign In</button>
        </form>

        <a href="/auth/google" class="google-btn">
            <img src="https://www.google.com/favicon.ico" alt="Google" class="google-icon">
            Continue with Google
        </a>

        <div class="login-footer">
            <p>Don't have an account? <a href="/signup">Register</a></p>
            <p><a href="/forgot-password">Forgot password?</a></p>
        </div>
    </div>

    <script>
        function togglePasswordVisibility(inputId) {
            const passwordInput = document.getElementById(inputId);
            passwordInput.type =
                passwordInput.type === "password" ? "text" : "password";
        }

        function validateForm() {
            let isValid = true;
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value.trim();
            const userError = document.getElementById('nameerror');
            const passError = document.getElementById('passworderror');

            userError.style.display = 'none';
            passError.style.display = 'none';

            if (!username) {
                userError.innerHTML = 'Email is required';
                userError.style.display = 'block';
                isValid = false;
            } else if (!/^[\w.-]+@[a-zA-Z\d.-]+\.[a-zA-Z]{2,}$/.test(username)) {
                userError.innerHTML = 'Invalid email format';
                userError.style.display = 'block';
                isValid = false;
            }

            if (!password) {
                passError.innerHTML = 'Password is required';
                passError.style.display = 'block';
                isValid = false;
            }

            return isValid;
        }
    </script>
</body>
</html>